<Window x:Class="mag.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mag"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0">
            <TextBlock FontSize="40">Логин (Телефон, Mail)</TextBlock>
            <TextBox x:Name="Login" Width="400" FontSize="35" Margin="0,10,0,0" TextChanged="Login_TextChanged"></TextBox>
            <TextBlock FontSize="40">Пароль</TextBlock>
            <TextBox x:Name="Password" Width="400" FontSize="35" Margin="0,10,0,0"></TextBox>
        </StackPanel>
        <Button Grid.Row="1" x:Name="BtnAuth" Click="BtnAuth_Click" Width="100" Height="40" FontSize="20">Вход</Button>
    </Grid>
</Window>
